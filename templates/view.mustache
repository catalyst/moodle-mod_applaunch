{{!
    @template mod_applaunch/view

    Activity view page.

    Example context (json):
    {
        "modname": "Activity X",
        "url": "https://www.moodle.test/mod/applaunch/launch.php",
        "urlparams" : [
            {
                "name": "id",
                "value": 3
            }
        ]
    }
}}
<div class="mod_applaunch_view">
    <h1>{{modname}}</h1>
    <p>{{#str}} view:description, applaunch {{/str}}</p>
    <form action="{{url}}" method="get">
        {{#urlparams}}
            <input type="hidden" name="{{name}}" value="{{value}}">
        {{/urlparams}}
        <input type="submit" name="submit" class="btn btn-primary" role="button" value="{{#str}} view:launch, applaunch {{/str}}">
    </form>
</div>
